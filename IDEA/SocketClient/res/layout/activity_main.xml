<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TabHost android:layout_width="match_parent" android:layout_height="match_parent"
             android:id="@android:id/tabhost">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TabWidget android:id="@android:id/tabs" android:layout_width="match_parent"
                       android:layout_alignParentBottom="true"
                       android:layout_height="wrap_content"/>
            <FrameLayout android:id="@android:id/tabcontent" android:layout_width="match_parent"
                         android:layout_above="@android:id/tabs" android:layout_height="match_parent"/>
        </RelativeLayout>
    </TabHost>
</LinearLayout>

